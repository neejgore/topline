{
  "buildCommand": "npm run build",
  "installCommand": "npm install",
  "framework": "nextjs",
  "regions": ["iad1"],
  "crons": [
    {
      "path": "/api/cron/refresh-content",
      "schedule": "0 10 * * 1-5"
    },
    {
      "path": "/api/newsletter/send",
      "schedule": "0 12 * * 1-5"
    }
  ],
  "env": {
    "NEXT_PUBLIC_APP_NAME": "BellDesk AI",
    "METRICS_ENABLED": "false",
    "ARTICLE_LOOKBACK_HOURS": "48",
    "NEXT_PUBLIC_METRICS_ENABLED": "false"
  },
  "functions": {
    "app/api/**/*.ts": {
      "maxDuration": 300
    }
  }
} 